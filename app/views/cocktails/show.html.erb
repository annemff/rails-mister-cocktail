<h1><%= @cocktail.name %></h1>
<!-- <div class="d-flex flex-column"> -->
<% @cocktail.doses.each do |dose| %>
  <div class="d-flex flex-row mb-3">
    <div class="p-2"><p><%= dose.ingredient.name %></p></div>
    <div class="p-2"><p><%= dose.description %></p></div>
    <div class="p-2"><%= link_to dose_path(dose),
        method: :delete,  data: { confirm: "Are you sure?" } do%>
      <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
   </div>
<% end %>

<%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to cocktail list", cocktails_path %>


